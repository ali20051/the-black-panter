<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/head') -%>
<body>
    <div class="overlays"></div>
    <div class="form-container">
        <div class="conatiner">
            <h2 class="title">Sing-up</h2>
            <h5><%= alert %></h5>
            <form action="/singup" method="POST">
                <!-- Grid -->
                <div class="grid">
                    <!-- Full name -->
                    <label for="fullname">
                         Your Full Name
                        <input type="text" id="lastname" name="fullName" placeholder="Full Name" required>
                    </label>
                    <!-- e-mail and Password -->
                    <label for="email">
                        e-mail
                        <input type="email" id="email" name="email" placeholder="email" required>
                    </label>
                    <label for="password">
                        Password
                        <input type="password" id="password" name="password" placeholder="Password" required>
                    </label>
                </div>
                <fieldset>
                    <label for="terms">
                        <input type="checkbox" id="terms" name="terms">
                        I agree to the <a href="#">Terms</a> and <a href="#">Condition</a>
                    </label>
                </fieldset>
                <!-- Button -->
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>